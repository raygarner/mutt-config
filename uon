set from = "psyrg4@nottingham.ac.uk"

set spoolfile = "+INBOX"
set record = "+Sent"
set trash = "+Trash"
set postponed = "+Drafts"

mailboxes =INBOX =Sent =Trash =Drafts

account-hook $folder "set imap_user=psyrg4@nottingham.ac.uk"

source ~/.mutt/colour.muttrc

